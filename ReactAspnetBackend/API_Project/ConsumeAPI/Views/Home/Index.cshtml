@model List<ConsumeAPI.ResponseModels.ProductResponseModel>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Web Api Consume</title>
</head>
<body>
    <a asp-controller="Home" asp-action="Create">Yeni Ürün Ekle</a>

    <table class="table table-bordered">
        <tr>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stoğu</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
                    @{ if (Model != null)
                        {
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="Update" asp-controller="Home" asp-route-id="@product.Id">Güncelle</a>
                    <a asp-action="Remove" asp-controller="Home" asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
            }
                        }
                        
                        }
    </table>
</body>
</html>